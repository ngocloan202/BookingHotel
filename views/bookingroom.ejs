<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Xác Nhận Đặt Phòng</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="css/styles.css">
</head>
<body>
    <!-- Thanh điều hướng -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
     <div class="container">
      <a class="navbar-brand fw-bold" href="/">ZentoStay</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item"><a class="nav-link" href="/">Trang Chủ</a></li>
          <li class="nav-item"><a class="nav-link" href="/room">Phòng</a></li>
          <li class="nav-item"><a class="nav-link" href="#">Tiện Nghi</a></li>
          <li class="nav-item"><a class="nav-link" href="/contact">Liên Hệ</a></li>
          <li class="nav-item"><a class="nav-link" href="/introduce">Giới Thiệu</a></li>
        </ul>
        <!-- xác thực người dùng -->
        <div class="d-flex align-items-center justify-content-end gap-2 pe-3" id="auth-section"style="height: 50px;">
          <% if (!user) { %>
            <a href="/login" class="btn btn-outline-dark me-2">Đăng Nhập</a>
            <a href="/register" class="btn btn-dark ">Đăng Ký</a>
          <% } else { %>
          <span class="fs-6 text-dark">Xin chào: <%= user.hoVaTen %></span>
          <div class="dropdown">
            <img src="/images/<%= user.hinhAnh || 'default.jpg' %>" width="32" height="32" class="rounded-circle dropdown-toggle" data-bs-toggle="dropdown" role="button">
            <ul class="dropdown-menu dropdown-menu-end">
              <% if (user.role === true) { %> <!-- là admin -->
                <li><a class="dropdown-item" href="/dashboard">Trang quản trị</a></li>
              <% } else { %> <!-- là khách hàng -->
                <li><a class="dropdown-item" href="#">Tài khoản của tôi</a></li>
                <li><a class="dropdown-item" href="/customer_booking">Phòng đã đặt</a></li>
                <li><a class="dropdown-item" href="/logout">Đăng xuất</a></li>
              <% } %>
            <li><hr class="dropdown-divider"></li>
            </ul>
          </div>
          <% } %>
        </div>
      </div>
     </div>
    </nav>
  <div class="container py-5">
    <h2 class="mb-4 fw-bold">XÁC NHẬN ĐẶT PHÒNG</h2>
    <div class="row">
      <div class="col-md-6">
        <!-- Hình ảnh phòng -->
        <img src="[URL_PHONG]" alt="Ảnh phòng" class="img-fluid rounded shadow">
        <p class="mt-3 fs-5 fw-semibold">?</p>
        <p class="text-muted">?</p>
      </div>

      <div class="col-md-6">
        <div class="card p-4">
          <h5 class="mb-3">CHI TIẾT PHÒNG ĐẶT</h5>
          <form action="/bookings/confirm" method="POST">
            <div class="mb-3">
              <label class="form-label">Tên</label>
              <input type="text" name="name" class="form-control" value="<%= user.name %>" readonly>
            </div>
            <div class="mb-3">
              <label class="form-label">Số Điện Thoại</label>
              <input type="text" name="phone" class="form-control" value="<%= user.phone %>" readonly>
            </div>
            <div class="mb-3">
              <label class="form-label">Địa Chỉ</label>
              <textarea name="address" class="form-control" rows="2"><%= user.address %></textarea>
            </div>
            <div class="row">
              <div class="col">
                <label class="form-label">Ngày Nhận Phòng</label>
                <input type="date" name="checkin" class="form-control" min="<%= today %>" required>
              </div>
              <div class="col">
                <label class="form-label">Ngày Trả Phòng</label>
                <input type="date" name="checkout" class="form-control" required>
              </div>
            </div>
            <div class="mt-3">
              <p><strong>Số Phòng Trống:</strong> <%= room.available %></p>
              <p><strong>Số Ngày Đặt:</strong> <span id="days">[TÍNH TOÁN]</span></p>
              <p><strong>Tổng số tiền phải trả:</strong> <span id="total">[TÍNH TOÁN]</span> vnd</p>
              <p class="text-danger" id="dateError" style="display:none;">Ngày đặt không hợp lệ. Vui lòng chọn lại!</p>
            </div>
            <button type="submit" class="btn btn-success w-100">Đặt Ngay</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script>
    const checkinInput = document.querySelector('input[name="checkin"]');
    const checkoutInput = document.querySelector('input[name="checkout"]');
    const dateError = document.getElementById('dateError');
    const totalSpan = document.getElementById('total');
    const daysSpan = document.getElementById('days');

    function calculateDays() {
      const checkin = new Date(checkinInput.value);
      const checkout = new Date(checkoutInput.value);
      const today = new Date();

      if (checkin < today || checkout <= checkin) {
        dateError.style.display = 'block';
        totalSpan.innerText = '[TÍNH TOÁN]';
        daysSpan.innerText = '[TÍNH TOÁN]';
      } else {
        dateError.style.display = 'none';
        const diffDays = Math.ceil((checkout - checkin) / (1000 * 60 * 60 * 24));
        const total = diffDays * 800000;
        totalSpan.innerText = total.toLocaleString();
        daysSpan.innerText = diffDays;
      }
    }
    checkinInput.addEventListener('change', calculateDays);
    checkoutInput.addEventListener('change', calculateDays);
  </script>
  <!-- Flash message -->
  <% if (success_msg && success_msg.length > 0 || error_msg && error_msg.length > 0) { %>
    <div id="flash-message" class="position-fixed top-0 start-50 translate-middle-x mt-3" style="z-index: 9999; min-width: 300px;">
      <% if (success_msg) { %>
        <div class="alert alert-success text-center shadow"><%= success_msg %></div>
      <% } %>
      <% if (error_msg) { %>
        <div class="alert alert-danger text-center shadow"><%= error_msg %></div>
      <% } %>
    </div>
  <% } %>
  <script>
    setTimeout(() => {
      const msg = document.getElementById('flash-message');
      if (msg) msg.remove();
    }, 3000);
  </script>
</body>
</html>
