<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Tài Khoản Khách Hàng</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="css/styles1.css">
  <style>
     a.nav-link.a{
      background-color: #0d6efd;
      padding: 5px;
      border-radius: 5px;
    }
    </style>
</head>
<body class="bg-light">

  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom border-secondary">
        <div class="container-fluid">
          <a class="navbar fw-bold" href="/dashboard">ADMIN</a>
          <div class="ms-auto">
            <button class="btn btn-outline-light" onclick="window.location.href='/logout'">Đăng Xuất</button>
          </div>
        </div>
      </nav>
      <aside class="col-md-2 bg-dark text-white min-vh-100 p-3">
            <ul class="nav flex-column">
              <li class="nav-item"><a class="nav-link text-white active" href="/dashboard">Thống Kê</a></li>
              <li class="nav-item">
                <details>
                  <summary class="text-white">Đặt Phòng</summary>
                  <ul class="list-unstyled ms-3">
                    <li><a class="text-white" href="/newbookingroom">Phòng Mới Đặt</a></li>
                    <li><a class="text-white" href="/confirmpayment">Xác Nhận Thanh Toán</a></li>
                    <li><a class="text-white" href="/historybooking">Hồ Sơ Đặt Phòng</a></li>
                  </ul>
                </details>
              </li>
              <li class="nav-item"><a class="nav-link  text-white" href="/managecustomer">Khách Hàng</a></li>
              <li class="nav-item"><a class="nav-link text-white" href="/feedback">Phản Hồi</a></li>
              <li class="nav-item"><a class="nav-link text-white" href="/reviews">Đánh Giá</a></li>
              <li class="nav-item"><a class="nav-link a text-white" href="/manageroom">Phòng</a></li>
              <li class="nav-item"><a class="nav-link text-white" href="/manageequipment">Cơ Sở và Thiết Bị</a></li>
              <!--<li class="nav-item"><a class="nav-link text-white" href="#">Slided</a></li>
              <li class="nav-item"><a class="nav-link text-white" href="#">Thiết Lập</a></li>-->
              
            </ul>
        </aside>

      <!-- Main Content -->
      <main class="col-md-10 p-4">
        <h3 class="mb-4">Phòng</h3>
        <div class="card p-3">
          <div class="d-flex justify-content-end mb-3">
            <a href="/rooms/add" class="btn btn-dark"><i class="bi bi-plus-lg"></i> Thêm Phòng</a>
          </div>
          <div class="table-responsive">
            <table class="table table-bordered table-striped text-center align-middle">
              <thead class="table-dark">
                <tr>
                  <th>#</th>
                  <th>Tên phòng</th>
                  <th>Ảnh</th>
                  <th>Loại phòng</th>
                  <th>Giá phòng</th>
                  <th>Trạng thái</th>
                  <th>Ghi chú</th>
                  <th>Hành động</th>
                </tr>
              </thead>
              <tbody>
                <% rooms.forEach((room, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= room.tenPhong %></td>
                    <td><img src="/images/<%= room.image %>" width="80" height="60" alt="Ảnh phòng"></td>
                    <td><%= room.loaiPhong?.tenLoaiPhong || 'N/A' %></td>
                    <td><%= room.giaPhong %></td>
                    <td><%= room.trangThai %></td>
                    <td><%= room.ghiChu %></td>
                    <td>
                      <a href="/rooms/edit/<%= room._id %>" class="btn btn-sm btn-primary" title="Sửa">
                        <i class="bi bi-pencil-square"></i>
                      </a>
                      <form action="/room/delete/<%= room._id %>" method="POST" onsubmit="return confirm('Bạn có chắc muốn xoá phòng này?');">
                        <button class="btn btn-sm btn-danger" type="submit" title="Xoá">
                          <i class="bi bi-trash-fill"></i>
                        </button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              </tbody>              
            </table>
          </div>
        </div>
      </main>

    </div>
  </div>
</body>
</html>
