<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Thêm Thiết Bị</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body>
<div class="card p-4 mb-4 mx-auto" style="max-width: 700px;">
  <h5 class="mb-3  text-center fw-bold">
    <i class="bi bi-tools"></i> Thêm Thiết Bị Vào Phòng
  </h5>
  <form action="/room-equipment/add" method="POST">
    <div class="row g-3">
      <div class="col-md-6">
        <label for="room" class="form-label">Tên Phòng</label>
        <select class="form-select" id="room" name="room" required>
          <option value="">-- Chọn Phòng --</option>
          <% rooms.forEach(room => { %>
            <option value="<%= room._id %>"><%= room.tenPhong %></option>
          <% }) %>
        </select>
      </div>
      <div class="col-md-6">
        <label for="equipment" class="form-label">Tên Thiết Bị</label>
        <select class="form-select" id="equipment" name="equipment" required>
          <option value="">-- Chọn Thiết Bị --</option>
          <% equipments.forEach(eq => { %>
            <option value="<%= eq._id %>"><%= eq.tenThietBi %></option>
          <% }) %>
        </select>
      </div>
      <div class="col-md-12">
        <label for="trangThai" class="form-label">Trạng Thái</label>
        <select class="form-select" id="trangThai" name="trangThai">
            <option value="true">Đang hoạt động</option>
            <option value="false">Không sử dụng</option>
          </select>
      </div>
    </div>
    <div class="text-end mt-4">
      <a href="#" class="btn btn-primary"> Quay lại</a>
            <button type="submit" class="btn btn-success"><i class="bi bi-plus-circle"></i> Thêm Thiết Bị</button>
            <button type="submit" class="btn btn-danger" onclick="resetForm()"> Huỷ</button>
      </button>
    </div>
  </form>
</div>
	<script>
        function resetForm() {
            document.querySelector("form").reset();
        }
    </script>	  
</body>
