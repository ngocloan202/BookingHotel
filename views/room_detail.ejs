<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Chi Tiết Phòng</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('header') %>
    <div class="container py-3">
      <% if (room) { %>
        <a href="/room" class="btn btn-outline-secondary mb-3"><i class="bi bi-arrow-left"></i> Quay lại</a>
        <h2 class="fw-bold mb-4 text-left"><%= room.tenPhong %></h2>
        <div class="row g-4">
          <div class="col-md-6">
            <img src="/images/<%= room.image ? room.image : 'default.jpg' %>" alt="Ảnh phòng" class="img-fluid rounded shadow-sm w-100">
          </div>
          <div class="col-md-6 d-flex flex-column justify-content-between">
            <div>
              <h5 class="fw-bold mb-2">Loại phòng</h5>
              <p><%= room.loaiPhong && room.loaiPhong.tenLoaiPhong ? room.loaiPhong.tenLoaiPhong : 'Chưa xác định' %></p>
              <h5 class="fw-bold mb-2">Mô tả</h5>
              <p><%= room.loaiPhong && room.loaiPhong.moTa ? room.loaiPhong.moTa : '' %></p>
              <div class="d-flex align-items-center mb-2 gap-4">
                <div>
                  <span class="fw-bold fs-5">Số người tối đa: </span>
                  <span class="fs-6"><%= room.loaiPhong && room.loaiPhong.soNguoiToiDa ? room.loaiPhong.soNguoiToiDa : '' %></span>
                </div>
                <div>
                  <span class="fw-bold fs-5">Trạng thái: </span>
                  <span class="badge <%= room.trangThai === 'Trống' ? 'bg-success' : 'bg-danger' %> px-3 py-2 fs-6 align-middle">
                    <%= room.trangThai %>
                  </span>
                </div>
              </div>
            </div>
            <div class="mt-4">
              <div class="mb-3">
                <span class="fs-2 fw-bold text-success"><%= room.giaPhong ? room.giaPhong.toLocaleString('vi-VN') : '' %> VND</span>
              </div>
              <a href="/booking/confirm/<%= room._id %>" class="btn btn-success btn-lg w-100 shadow">Đặt Ngay</a>
            </div>
          </div>
        </div>
        <div class="mt-5 card p-4 shadow-sm">
          <h5 class="fw-bold">Chi Tiết Về Phòng</h5>
          <p><%= room.ghiChu || '' %></p>
        </div>
      <% } else { %>
        <h2 class="fw-bold mb-4 text-danger">Không tìm thấy phòng</h2>
        <% if (typeof error !== 'undefined') { %>
          <p class="text-danger"><%= error %></p>
        <% } %>
      <% } %>
    </div>
</body>
</html>