<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Dịch Vụ Khách Sạn</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .service-card {
            transition: transform 0.3s;
            height: 100%;
        }
        .service-card:hover {
            transform: translateY(-5px);
        }
        .service-img {
            height: 200px;
            object-fit: cover;
        }
        .price {
            color: #28a745;
            font-size: 1.25rem;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <h2 class="text-center mb-4">Dịch Vụ Của Chúng Tôi</h2>
        <div class="row g-4">
            <% services.forEach(function(service) { %>
                <div class="col-md-4">
                    <div class="card service-card shadow-sm">
                        <img src="/images/<%= service.hinhAnh %>" 
                             class="card-img-top service-img" 
                             alt="<%= service.tenDichVu %>"
                             onerror="this.src='/images/default-service.jpg'">
                        <div class="card-body">
                            <h5 class="card-title"><%= service.tenDichVu %></h5>
                            <p class="card-text"><%= service.moTa %></p>
                            <p class="price mb-3"><%= service.gia.toLocaleString('vi-VN') %> VND</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <button class="btn btn-outline-primary" 
                                        onclick="bookService('<%= service._id %>')">
                                    <i class="fas fa-calendar-plus me-2"></i>Đặt Dịch Vụ
                                </button>
                                <span class="badge bg-info">
                                    <i class="fas fa-clock me-1"></i>
                                    <%= service.thoiGianPhucVu %>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <script>
        function bookService(serviceId) {
            console.log('Booking service:', serviceId);
        }
    </script>
</body>
</html>