<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Chi Tiết Phòng</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-light">
    <%- include('header') %>
    <div class="container-fluid py-4">
      <div class="room-detail-container">
        <% if (room) { %>
          <div class="mb-4">
            <a href="/room" class="back-btn">
              <i class="bi bi-arrow-left"></i> Quay lại
            </a>
            <h1 class="room-title"><%= room.tenPhong %></h1>
          </div>
          
          <div class="row g-4 mb-4">
            <div class="col-lg-7">
              <img src="/images/<%= room.image ? room.image : 'default.jpg' %>" 
                   alt="Ảnh phòng" 
                   class="img-fluid room-image w-100">
            </div>
            
            <div class="col-lg-5">
              <div class="info-card">
                <div class="detail-item">
                  <h6 class="section-title mb-2">
                    <i class="bi bi-house-door me-2"></i>Loại phòng
                  </h6>
                  <p class="mb-0 text-muted">
                    <%= room.loaiPhong && room.loaiPhong.tenLoaiPhong ? room.loaiPhong.tenLoaiPhong : 'Chưa xác định' %>
                  </p>
                </div>

                <!-- Description -->
                <div class="detail-item">
                  <h6 class="section-title mb-2">
                    <i class="bi bi-info-circle me-2"></i>Mô tả
                  </h6>
                  <p class="mb-0 text-muted">
                    <%= room.loaiPhong && room.loaiPhong.moTa ? room.loaiPhong.moTa : '' %>
                  </p>
                </div>

                <!-- Capacity & Status -->
                <div class="detail-item">
                  <div class="row g-3">
                    <div class="col-sm-6">
                      <h6 class="mb-1">
                        <i class="bi bi-people me-2"></i>Số người tối đa
                      </h6>
                      <span class="fw-bold text-primary">
                        <%= room.loaiPhong && room.loaiPhong.soNguoiToiDa ? room.loaiPhong.soNguoiToiDa : '' %> người
                      </span>
                    </div>
                    <div class="col-sm-6">
                      <h6 class="mb-1">
                        <i class="bi bi-check-circle me-2"></i>Trạng thái
                      </h6>
                      <span class="status-badge <%= room.trangThai === 'Trống' ? 'bg-success text-white' : 'bg-danger text-white' %>">
                        <%= room.trangThai %>
                      </span>
                    </div>
                  </div>
                </div>

                <!-- Price & Booking -->
                <div class="detail-item">
                  <div class="text-center pt-3">
                    <div class="mb-3">
                      <span class="price-highlight" style="font-size: 2.5rem;">
                        <%= room.giaPhong ? room.giaPhong.toLocaleString('vi-VN') : '' %>
                      </span>
                      <span class="text-muted fs-5"> VND/đêm</span>
                    </div>
                    <a href="/booking/confirm/<%= room._id %>" class="btn btn-success btn-book w-100">
                      <i class="bi bi-calendar-check me-2"></i>Đặt Ngay
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Room Details Section -->
          <div class="row">
            <div class="col-12">
              <div class="info-card">
                <h5 class="section-title">
                  <i class="bi bi-list-ul me-2"></i>Chi Tiết Về Phòng
                </h5>
                <p class="mb-0 text-muted lh-lg">
                  <%= room.ghiChu || 'Không có thông tin chi tiết thêm.' %>
                </p>
              </div>
            </div>
          </div>

        <% } else { %>
          <!-- Error State -->
          <div class="text-center py-5">
            <div class="info-card">
              <i class="bi bi-exclamation-triangle text-danger" style="font-size: 3rem;"></i>
              <h2 class="text-danger mt-3 mb-3">Không tìm thấy phòng</h2>
              <% if (typeof error !== 'undefined') { %>
                <p class="text-muted"><%= error %></p>
              <% } %>
              <a href="/room" class="btn btn-outline-secondary mt-3">
                <i class="bi bi-arrow-left me-2"></i>Quay lại danh sách phòng
              </a>
            </div>
          </div>
        <% } %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>