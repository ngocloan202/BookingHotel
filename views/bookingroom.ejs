<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Xác Nhận Đặt Phòng</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="css/styles.css">
</head>
<body>
    <!-- Thanh điều hướng -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
     <div class="container">
      <a class="navbar-brand fw-bold" href="/">ZentoStay</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item"><a class="nav-link" href="/">Trang Chủ</a></li>
          <li class="nav-item"><a class="nav-link" href="/room">Phòng</a></li>
          <li class="nav-item"><a class="nav-link" href="#">Tiện Nghi</a></li>
          <li class="nav-item"><a class="nav-link" href="/contact">Liên Hệ</a></li>
          <li class="nav-item"><a class="nav-link" href="/introduce">Giới Thiệu</a></li>
        </ul>
        <div class="d-flex align-items-center" id="auth-section">
         
        </div>
      </div>
     </div>
    </nav>
  <div class="container py-5">
    <h2 class="mb-4 fw-bold">XÁC NHẬN ĐẶT PHÒNG</h2>
    <div class="row">
      <div class="col-md-6">
       <img src="/images/<%= room.image ? room.image : 'default.jpg' %>" alt="Ảnh phòng" class="img-fluid room-image w-100">
      </div>

      <div class="col-md-6">
        <div class="card p-4">
          <h5 class="mb-3">CHI TIẾT PHÒNG ĐẶT</h5>
        <form action="/booking/confirm" method="POST" id="bookingForm">
          <input type="hidden" name="roomId" value="<%= room._id %>" />

          <!-- Họ và tên -->
          <div class="mb-3">
            <label class="form-label">Họ và Tên</label>
            <input type="text" name="hoVaTen" class="form-control" placeholder="Nhập họ tên của bạn" required />
          </div>

          <!-- CCCD -->
          <div class="mb-3">
            <label class="form-label">CCCD</label>
            <input type="text" name="cccd" class="form-control" placeholder="Nhập số CCCD/CMND" required />
          </div>

          <!-- Số điện thoại -->
          <div class="mb-3">
            <label class="form-label">Số Điện Thoại</label>
            <input type="text" name="soDienThoai" class="form-control" required pattern="[0-9]{9,15}" title="Vui lòng nhập số điện thoại hợp lệ"/>
          </div>

          <!-- Email (tuỳ chọn) -->
          <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" name="email" class="form-control" placeholder="Nhập email nếu có" />
          </div>

          <!-- Địa chỉ -->
          <div class="mb-3">
            <label class="form-label">Địa Chỉ</label>
            <textarea name="diaChi" class="form-control" rows="2" placeholder="Nhập địa chỉ liên hệ" required ></textarea>
          </div>

          <!-- Quốc tịch -->
          <div class="mb-3">
            <label class="form-label">Quốc tịch</label>
            <select name="nationalityId" class="form-select">
              <% nationalities.forEach(n => { %>
                <option value="<%= n._id %>" <%= n.tenQuocGia === 'Việt Nam' ? 'selected' : '' %> >
                  <%= n.tenQuocGia %>
                </option>
              <% }) %>
            </select>
          </div>
          <!-- Ngày nhận / trả -->
          <div class="row">
            <div class="col">
              <label class="form-label">Ngày Nhận Phòng</label>
              <input type="date" name="ngayNhanPhong" id="checkin" class="form-control" required />
            </div>
            <div class="col">
              <label class="form-label">Ngày Trả Phòng</label>
              <input type="date" name="ngayTraPhong" id="checkout" class="form-control" required />
            </div>
          </div>

          <!-- Tổng tiền + xác nhận -->
          <div class="mt-3">
            <p><strong>Số Phòng Trống:</strong> <%= room.available %></p>
            <p><strong>Số Ngày Đặt:</strong> <span id="days">[TÍNH TOÁN]</span></p>
            <p><strong>Giá phòng / đêm:</strong> <span id="pricePerNight"><%= (room.giaPhong || 0).toLocaleString('vi-VN') %></span> vnd</p>
            <p><strong>Tổng số tiền phải trả:</strong> <span id="total">0</span> vnd</p>
            <p class="text-danger" id="dateError" style="display:none;">
              Ngày đặt không hợp lệ. Vui lòng chọn lại!
            </p>
          </div>

          <button type="submit" class="btn btn-success w-100">Đặt Ngay</button>
        </form>
        </div>
      </div>
    </div>  
  </div>  
  <script>
    const checkin = document.getElementById('checkin');
    const checkout = document.getElementById('checkout');
    const daysSpan = document.getElementById('days');
    const totalSpan = document.getElementById('total');
    const dateError = document.getElementById('dateError');
    
    // Giá phòng từ server (number)
    const pricePerNight = Number('<%= room.giaPhong || 0 %>');

    function calculateDaysAndTotal() {
      const checkinDate = new Date(checkin.value);
      const checkoutDate = new Date(checkout.value);

      if (!checkin.value || !checkout.value) {
        daysSpan.textContent = '0';
        totalSpan.textContent = '0';
        dateError.style.display = 'none';
        return;
      }

      const diffTime = checkoutDate - checkinDate;
      const diffDays = diffTime / (1000 * 60 * 60 * 24);

      if (diffDays <= 0) {
        daysSpan.textContent = '0';
        totalSpan.textContent = '0';
        dateError.style.display = 'block';
      } else {
        daysSpan.textContent = diffDays;
        totalSpan.textContent = (diffDays * pricePerNight).toLocaleString('vi-VN');
        dateError.style.display = 'none';
      }
    }

    checkin.addEventListener('change', calculateDaysAndTotal);
    checkout.addEventListener('change', calculateDaysAndTotal);
  </script>
  <!-- Flash message -->
  <% if (success_msg && success_msg.length > 0 || error_msg && error_msg.length > 0) { %>
    <div id="flash-message" class="position-fixed top-0 start-50 translate-middle-x mt-3" style="z-index: 9999; min-width: 300px;">
      <% if (success_msg) { %>
        <div class="alert alert-success text-center shadow"><%= success_msg %></div>
      <% } %>
      <% if (error_msg) { %>
        <div class="alert alert-danger text-center shadow"><%= error_msg %></div>
      <% } %>
    </div>
  <% } %>
  <script>
    setTimeout(() => {
      const msg = document.getElementById('flash-message');
      if (msg) msg.remove();
    }, 3000);
  </script>
</body>
</html>
