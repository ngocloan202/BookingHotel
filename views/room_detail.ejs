<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Chi Tiết Phòng</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('header') %>
    <div class="container py-5">
      <% if (room) { %>
        <h2 class="fw-bold mb-4"><%= room.tenPhong %></h2>
        <div class="row">
          <div class="col-md-6">
            <img src="/images/<%= room.image ? room.image : 'default.jpg' %>" alt="Ảnh phòng" class="img-fluid rounded shadow-sm">
            <p class="mt-3 fw-semibold text-success fs-4"><%= room.giaPhong.toLocaleString('vi-VN') %> VND mỗi đêm</p>
          </div>
          <div class="col-md-6">
            <h5 class="fw-bold">Loại phòng</h5>
            <p><%= room.loaiPhong ? room.loaiPhong.tenLoaiPhong : 'Chưa xác định' %></p>
            <h5 class="fw-bold">Mô tả</h5>
            <p><%= room.loaiPhong ? room.loaiPhong.moTa : '' %></p>
            <h5 class="fw-bold">Số người tối đa</h5>
            <p><%= room.loaiPhong ? room.loaiPhong.soNguoiToiDa : '' %></p>
            <h5 class="fw-bold">Trạng thái</h5>
            <p><%= room.trangThai %></p>
            <div class="mt-4">
              <a href="/booking/confirm/<%= room._id %>" class="btn btn-success w-100">Đặt Ngay</a>
            </div>
          </div>
        </div>
        <div class="mt-5">
          <h5 class="fw-bold">Chi Tiết Về Phòng</h5>
          <p><%= room.ghiChu || '' %></p>
        </div>
      <% } else { %>
        <h2 class="fw-bold mb-4 text-danger">Không tìm thấy phòng</h2>
        <% if (typeof error !== 'undefined') { %>
          <p class="text-danger"><%= error %></p>
        <% } %>
      <% } %>
    </div>
</body>
</html>